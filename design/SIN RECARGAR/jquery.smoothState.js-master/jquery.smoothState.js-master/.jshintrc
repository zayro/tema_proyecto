{
    "camelcase": true,
    "boss": true,
    "curly": true,
    "eqeqeq": true,
    "es3": false, /* we don't support IE 6 */
    "forin":true,
    "eqnull": true,
    "expr": true,
    "immed": true,
    "indent": 4, /* code standards, always use 4 spaces for indent */
    "latedef": true,
    "newcap": true,
    "noempty": true,
    "nonew": true,
    "plusplus": false,
    "noarg": true,
    "onevar": true,
    "quotmark": "double",
    "smarttabs": true,
    "trailing": true,
    "undef": true,
    "unused": "vars",
    "strict": true,
    "trailing": true,
    "jquery": true,
    "browser": true,

    /*
     * Below are some code quality metrics
     */
    "maxparams": 5,
    "maxdepth": 3,
    "maxstatements": 25,
    /**
     * maxcomplexity checks the cyclomatic complexity of code.
     *
     * In the 2nd edition of Steve McConnell"s Code Complete he recommends that
     * a cyclomatic complexity from 0 to 5 is typically fine, but you should be
     * aware if the complexity starts to get in the 6 to 10 range. He further
     * explains that anything over a complexity of 10 you should strongly
     * consider refactoring your code.
     */
    "maxcomplexity": 10,
    "maxlen": 135
}
